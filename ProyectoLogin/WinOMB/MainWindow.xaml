<Window x:Class="WinOMB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingreso al Sistema" Height="248" Width="344" FontSize="14" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
  <DockPanel LastChildFill="True">
    <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal" DockPanel.Dock="Bottom">
      <Button Content="Ingresar" Margin="10" Padding="5" Width="100"></Button>
      <Button Content="Cancelar" Margin="10" Padding="5" Width="100"></Button>
    </StackPanel>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition></RowDefinition>
        <RowDefinition></RowDefinition>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="4*"></ColumnDefinition>
        <ColumnDefinition Width="6*"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Image Grid.Row="0" Grid.RowSpan="2" Source="Imagenes/Devil_inside.jpg" Width="96"></Image>
      <StackPanel Grid.Column="1" Grid.Row="0">
        <Label Margin="10 10 10 0">Usuario</Label>
        <TextBox Name="txtUsuario" Margin="10"></TextBox>
      </StackPanel>
      <StackPanel Grid.Column="1" Grid.Row="1">
        <Label Margin="10 10 10 0">Password</Label>
        <PasswordBox Name="txtPassword" Margin="10" FontSize="16"></PasswordBox>
      </StackPanel>
    </Grid>
  </DockPanel>
</Window>
